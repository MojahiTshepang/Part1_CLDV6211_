@model IEnumerable<SlaezyBookingEventApp.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.VenueName)</th>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.VenueName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                    <td>
                        <img src="@item.ImageURL" alt="@item.VenueName" style="max-width: 100px; max-height: 100px; border-radius: 5px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VenueID" class="btn btn-outline-primary btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.VenueID" class="btn btn-outline-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.VenueID" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
